---
import { SITE_TITLE } from '../consts';

import MenuIcon from '../assets/menu.svg';

const { pathname } = Astro.url;

const isActive = (path: string): boolean => pathname.startsWith(path);
---

<header>
  <a href="/">
    <h1>{SITE_TITLE}</h1>
  </a>
  <nav>
    <ul>
      <li><a href="/blog" class={isActive('/blog') ? 'active' : ''}>Blog</a></li>
      <li>
        <a href="/projects" class={isActive('/projects') ? 'active' : ''}>Projects</a>
      </li>
    </ul>
  </nav>
  <a href="#" role="button" class="menu">
    <MenuIcon />
  </a>
</header>

<style>
  header {
    border-bottom: 3px solid var(--border-color);
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 3rem;

    & h1 {
      font-size: 1.3rem;
      margin: 0;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  }

  nav {
    & > ul {
      display: flex;
      font-size: 1.2rem;
      gap: 1.5rem;
      list-style: none;
    }

    & a {
      position: relative;
      background-image: linear-gradient(to right, var(--accent-color) 0%, var(--accent-color) 100%);
      background-position: 0 100%;
      background-size: 0% 2px;
      background-repeat: no-repeat;
      transition:
        background-size 0.3s,
        color 0.3s;
      padding-bottom: 2px;
    }

    & a:hover,
    & a.active {
      background-size: 100% 2px;
    }
  }

  .menu {
    display: none;
  }

  @media screen and (max-width: 768px) {
    nav {
      display: none;
    }

    .menu {
      display: block;
    }
  }
</style>
