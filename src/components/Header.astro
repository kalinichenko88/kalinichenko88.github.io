---
import Navigation from './Navigation.astro';
import ThemeSwitcher from './ThemeSwitcher.astro';

import { SITE_TITLE } from '../consts';
---

<header class="sticky top-0 z-50 w-full border-b border-border bg-bg/80 backdrop-blur-sm">
  <div
    class="mx-auto max-w-container px-4 lg:px-6 py-4 flex items-center lg:flex-row flex-col gap-4 lg:gap-8"
  >
    <a
      href="/"
      class="flex-none text-base md:text-lg font-semibold tracking-tight text-fg no-underline whitespace-nowrap transition-colors hover:text-accent"
    >
      {SITE_TITLE}
    </a>
    <Navigation />
  </div>
</header>
