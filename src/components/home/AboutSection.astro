---
import { ROLE } from '../../consts';
import ExpertiseGrid from './ExpertiseGrid.astro';

type ExpertiseArea = {
  category: string;
  skills: string[];
};

type Props = {
  expertise: ExpertiseArea[];
};

const { expertise } = Astro.props;
---

<section id="about" class="py-12 md:py-16 bg-background-subtle">
  <div class="container">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      <div class="lg:col-span-5">
        <span class="section-label mb-3">01 — About</span>
        <h2 class="text-foreground mb-4">Engineering with purpose</h2>
        <div class="space-y-4 text-foreground-secondary">
          <p>
            {ROLE} with 10+ years shipping production web applications. Deep expertise in React and TypeScript
            ecosystems, backed by full-stack experience with Node.js and NestJS.
          </p>
          <p>
            I've navigated the full evolution of frontend — from jQuery and Angular.js to modern
            component architectures — and I bring that perspective to building performant,
            maintainable systems.
          </p>
          <p>
            Based in <span class="text-foreground">Batumi, Georgia</span>. Working with
            international remote teams.
          </p>
        </div>
      </div>

      <div class="lg:col-span-7">
        <span class="section-label mb-3">02 — Expertise</span>
        <ExpertiseGrid expertise={expertise} />
      </div>
    </div>
  </div>
</section>
