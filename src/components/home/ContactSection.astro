---
import EmailIcon from '../../assets/icons/email.svg';
import LinkedinIcon from '../../assets/icons/linkedin.svg';

type Props = {
  mailProfileLink: string;
  linkedinProfileLink: string;
};

const { mailProfileLink, linkedinProfileLink } = Astro.props;
---

<section id="contact" class="py-12 md:py-16">
  <div class="container">
    <div class="max-w-2xl mx-auto text-center">
      <span class="section-label justify-center mb-3">05 â€” Contact</span>
      <h2 class="text-foreground mb-4">Let's work together</h2>
      <p class="text-foreground-secondary mb-6 max-w-lg mx-auto">
        Interested in collaboration? Get in touch.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
        <a href={`mailto:${mailProfileLink}`} class="btn-primary">
          <EmailIcon class="w-4 h-4" />
          Send me an email
        </a>
        <a
          href={linkedinProfileLink}
          target="_blank"
          rel="noopener noreferrer"
          class="btn-secondary"
        >
          <LinkedinIcon class="w-4 h-4" />
          Connect on LinkedIn
        </a>
      </div>
    </div>
  </div>
</section>
