---
import SunIcon from '../assets/icons/sun.svg';
import MoonIcon from '../assets/icons/moon.svg';
---

<button
  id="theme-switcher"
  class="relative flex h-10 w-10 cursor-pointer items-center justify-center border-none bg-transparent p-2 text-fg transition-colors duration-200 hover:text-accent"
  aria-label="Toggle theme"
  title="Toggle theme"
>
  <SunIcon
    class="sun-icon absolute h-6 w-6 scale-0 rotate-90 opacity-0 transition-all duration-500 dark:scale-100 dark:rotate-0 dark:opacity-100"
  />
  <MoonIcon
    class="moon-icon absolute h-6 w-6 scale-100 rotate-0 opacity-100 transition-all duration-500 dark:scale-0 dark:-rotate-90 dark:opacity-0"
  />
</button>

<script>
  import { toggleTheme } from '../helpers/theme';

  document.getElementById('theme-switcher')?.addEventListener('click', toggleTheme);
</script>
