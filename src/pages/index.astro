<style is:global>
  .home {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: repeat(3, min-content);
    grid-template-areas:
      'welcome welcome'
      'info info'
      'social social';
    gap: 1rem;
    border-bottom: 2px solid var(--border-color);
    padding-bottom: 3rem;
  }

  .welcome {
    grid-area: info;

    & > h1 {
      width: 100%;
      margin-bottom: 1rem;
    }

    & .person-image {
      float: right;
      clip-path: circle(50%);
      shape-outside: circle(50%);
    }
  }

